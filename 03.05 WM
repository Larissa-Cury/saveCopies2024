Template("stimuliNew.csv", row =>
  newTrial("sequence-"+row.lenNumeric,
  defaultButton.css({
  "align-items": "center",
  "background-image": "linear-gradient(to top left, #2a225b, #453e88)",
  color: "white", // "#23c0b9"
